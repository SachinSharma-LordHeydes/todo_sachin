@{
    ViewData["Title"] = "Privacy Policy";
}

@model List<todosachin.Models.TaskList>


<form asp-controller="Home" asp-action="Privacy" method="POST">
    <div class="form-group">
        <label for="task">Task</label>
        <input type="text" class="form-control" id="task" name="task" ariadescribedby="TaskHelp" placeholder="Enter your task">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="description" name="description" ariadescribedby="DescriptionHelp" placeholder="Enter description of your tasks">
    </div>
   
    <div class="form-group">
        <label for="status">Status</label>
        <input type="text" class="form-control" id="status" name="status" ariadescribedby="StatusHelp" placeholder="Enter status of your task">
    </div>
    <div class="form-group">
        <label for="test">Test</label>
        <input type="text" class="form-control" id="test" name="test" ariadescribedby="testHelp" placeholder="Enter test of your task">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<h1>My Task Lists</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Task</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
            <th scope="col">Test</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model)
        {
            <tr>
                <td>@list.Task</td>
                <td>@list.Description</td>
                <td>@list.Status</td>
                <td>@list.Test</td>
            </tr>
        }
    </tbody>
</table>
